#!/usr/bin/env bash

electron-packager . \
  --ignore bin \
  --ignore config.json \
  --prune true \
  --packageManager yarn \
  --out build/ \
  --overwrite \
  --platform=linux \
  --arch=x64

electron-installer-debian \
  --src build/Headset-linux-x64/ \
  --dest build/installers/ \
  --arch amd64 \
  --config config.json
